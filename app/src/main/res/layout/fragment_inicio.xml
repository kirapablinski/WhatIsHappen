<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <androidx.cardview.widget.CardView
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"


        android:clickable="false"
        android:padding="16dp">

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabecera con imagen de perfil y nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <!-- Imagen de perfil -->
                <ImageView
                    android:id="@+id/author_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/png" />

                <!-- Nombre del autor -->
                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AUTOR"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Texto del contenido -->
            <TextView
                android:id="@+id/cliqueame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="false"
                android:lineSpacingExtra="4dp"
                android:text="Texto de relleno texto de relleno texto de relleno texto de relleno texto de relleno texto de relleno..."
                android:textSize="16sp" />

            <!-- SecciÃ³n de comentarios -->
            <Button
                android:id="@+id/cliquea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VER" />

            <TextView
                android:id="@+id/comments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comentario"
                android:textColor="#888888"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>